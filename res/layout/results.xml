<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical" >
 
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dip" >

            <TextView
                android:id="@+id/rmsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RMS VALUE:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/rmsValue"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:text="0.0        "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/amp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[A]"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dip" >

            <TextView
                android:id="@+id/avgName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVERAGE VALUE:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/avgValue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:text="0.0   "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/amp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[A]"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:padding="20dip" >

            <TextView
                android:id="@+id/minName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINIMUM VALUE:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/minValue"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                android:text="0.0   "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/amp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[A]"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:padding="20dip" >

            <TextView
                android:id="@+id/maxName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAXIMUM VALUE:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/maxValue"
                android:layout_width="100dp"
                android:layout_gravity="center_horizontal|top"
                android:text="0.0   "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/amp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[A]"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="20dp" >

            <TextView
                android:id="@+id/chartbuttons"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="CHART BUTTONS"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="10sp" />
        </TableRow>

      
    </TableLayout>

 <GridLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:columnCount="1"
     android:orientation="vertical" >

     <Button
         android:id="@+id/btnRmsChart"
         style="@style/ButtonText"
         android:layout_width="268dp"
         android:layout_column="0"
         android:layout_gravity="left|top"
         android:layout_row="0"
         android:background="@drawable/greenbutton"
         android:text="RMS" />

     <Button
         android:id="@+id/btnFFTChart"
         style="@style/ButtonText"
         android:layout_width="267dp"
         android:layout_column="0"
         android:layout_gravity="right|top"
         android:layout_row="0"
         android:background="@drawable/bluebutton"
         android:text="FFT" />
 
 </GridLayout>

</LinearLayout>